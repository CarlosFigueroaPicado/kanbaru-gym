<Shell
    x:Class="kanbarugym.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:kanbarugym.Views"
    Title="kanbarugym"
    Shell.TabBarBackgroundColor="#CEF4FE"
    Shell.TabBarForegroundColor="#0595EC"
    Shell.TabBarTitleColor="#0595EC"
    Shell.TabBarUnselectedColor="#000">

    <TabBar>

        <Tab Title="Inicio" Icon="home.png" Route="homeTab">
            <ShellContent Title="Inicio"
                Route="PanelAdministrativo"
                ContentTemplate="{DataTemplate views:PanelAdministrativo}" />
        </Tab>

        <Tab Title="Clientes" Icon="client.png" Route="clientsTab">
            <ShellContent Title="Clientes"
                Route="Clients"
                ContentTemplate="{DataTemplate views:Clients}" />
        </Tab>

        <Tab Title="Entrenador" Icon="trainer.png" Route="trainerTab">
            <ShellContent Title="Entrenador"
                Route="Trainer"
                ContentTemplate="{DataTemplate views:Trainer}" />
        </Tab>

    </TabBar>

</Shell>
