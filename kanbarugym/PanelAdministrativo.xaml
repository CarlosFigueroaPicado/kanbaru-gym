<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="kanbarugym.PanelAdministrativo"  
             BackgroundColor="#fff"
             Title="Panel administrativo"
             >


    <VerticalStackLayout
        VerticalOptions="Fill"
        Padding="15,0">  
        <Label   
            Text="Panel administrativo"  
            VerticalOptions="Center"   
            FontSize="22"  
            FontAttributes="Bold"  
            TextDecorations="Underline"  
            TextColor="Black"  
            HorizontalOptions="Center" />  
        <Grid RowSpacing="10" ColumnSpacing="10" Margin="0,20,0,0">  
            <!-- Definimos 2 columnas de igual tamaño (50%) -->  
            <Grid.ColumnDefinitions>  
                <ColumnDefinition Width="*" />  
                <ColumnDefinition Width="*" />  
            </Grid.ColumnDefinitions>  

            <!-- 2 filas de igual tamaño -->  
            <Grid.RowDefinitions>  
                <RowDefinition Height="140" />  
                <RowDefinition Height="140" />  
            </Grid.RowDefinitions>  

            <!-- Primera tarjeta -->  
            <Border Grid.Column="0"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15">  
                <StackLayout>  
                    <Label Text="Termina pronto" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="Mensual" TextColor="White" FontSize="10"/>  
                    <Label Text="05/10/25" TextColor="White" FontSize="10"/>  
                    <Label Text="Moises Isaac Briones Laguna" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  

            <!-- Segunda tarjeta -->  
            <Border Grid.Column="1"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15">  
                <StackLayout>  
                    <Label Text="Nuevo cliente" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="Ingreso" TextColor="White" FontSize="10"/>  
                    <Label Text="04/10/25" TextColor="White" FontSize="10"/>  
                    <Label Text="Ramón Ulises Hernández Talavera" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  

            <!-- Tercera tarjeta -->  
            <Border Grid.Row="1" Grid.Column="0"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15"  
                   >  
                <StackLayout>  
                    <Label Text="Nuevo cliente" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="Ingreso" TextColor="White" FontSize="10"/>  
                    <Label Text="05/10/25" TextColor="White" FontSize="10"/>  
                    <Label Text="Carlos Moises Talavera Jarquín" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  

            <!-- Cuarta tarjeta -->  
            <Border Grid.Row="1" Grid.Column="1"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15">  
                <StackLayout>  
                    <Label Text="Terminada" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="Semanal" TextColor="White" FontSize="10"/>  
                    <Label Text="02/10/25" TextColor="White" FontSize="10"/>  
                    <Label Text="Ulises Mariano Cruz Briones" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  
        </Grid>  

        <!-- Registrar cliente -->  
        <Border Stroke="#2196F3"  
                StrokeThickness="0"  
                Background="#2196F3"  
                Margin="0,10"
                Padding="10"  
                StrokeShape="RoundRectangle 15">  
            <Grid ColumnDefinitions="Auto, *"  
                  VerticalOptions="Center"  
                  HorizontalOptions="Fill">  
                <Border WidthRequest="50"  
                        HeightRequest="50"  
                        Background="#42A5F5"  
                        StrokeThickness="0"  
                        StrokeShape="Ellipse"  
                        VerticalOptions="Center"  
                        HorizontalOptions="Center">  
                    <Image Source="portapapeles.png"  
                           WidthRequest="24"  
                           HeightRequest="24"  
                           HorizontalOptions="Center"  
                           VerticalOptions="Center" />  
                </Border>  
                <VerticalStackLayout Grid.Column="1"  
                                     VerticalOptions="Center"  
                                     Spacing="2"  
                                     Margin="10,0,0,0">  
                    <Label Text="Registrar cliente"  
                           FontSize="14"  
                           TextColor="White"  
                           FontAttributes="Bold"/>  
                    <Label Text="Registrar nuevo cliente"  
                           FontSize="10"  
                           TextColor="White"/>  
                </VerticalStackLayout>  

            </Grid>  
            <Border.GestureRecognizers>  
                <TapGestureRecognizer Tapped="OnRegisterClient"/>  
            </Border.GestureRecognizers>  
        </Border>  
        <!-- Registrar entrenador -->  
        <Border Stroke="#2196F3"  
         StrokeThickness="0"  
         Background="#2196F3"  
         Padding="10"  
         StrokeShape="RoundRectangle 15">  
            <Grid ColumnDefinitions="Auto, *"  
           VerticalOptions="Center"  
           HorizontalOptions="Fill">    
                <Border WidthRequest="50"  
                 HeightRequest="50"  
                 Background="#42A5F5"
                 StrokeThickness="0"  
                 StrokeShape="Ellipse"
                 VerticalOptions="Center"  
                 HorizontalOptions="Center">  
                    <Image Source="portapapeles.png"  
                    WidthRequest="24"  
                    HeightRequest="24"  
                    HorizontalOptions="Center"  
                    VerticalOptions="Center" />  
                </Border>  
                <VerticalStackLayout Grid.Column="1"  
                              VerticalOptions="Center"  
                              Spacing="2"  
                              Margin="10,0,0,0">  
                    <Label Text="Registrar entrenador"  
                    FontSize="14"  
                    TextColor="White"  
                    FontAttributes="Bold"/>  
                    <Label Text="Registrar nuevo entrenador"  
                    FontSize="10"  
                    TextColor="White"/>  
                </VerticalStackLayout>  

            </Grid>  
            <Border.GestureRecognizers>  
                <TapGestureRecognizer Tapped="OnRegisterCouch"/>  
            </Border.GestureRecognizers>  
        </Border>  
    </VerticalStackLayout>  
</ContentPage>