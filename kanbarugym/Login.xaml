<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="kanbarugym.Login"
                 BackgroundColor="#F0F0F0"
                 Title="Login">
    <VerticalStackLayout
            VerticalOptions="Center"
            Padding="24,0"
            >
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Iniciar "
                      TextDecorations="Underline"
                      FontAttributes="Bold"
                      FontSize="24"
                      TextColor="Black"/>
                    <Span Text="sesión"
                      FontAttributes="Bold"
                      FontSize="24"
                      TextColor="Black"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Border Stroke="#72C9F4"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1"
                Margin="0,20,0,0">
            <HorizontalStackLayout VerticalOptions="Center" Spacing="8" Padding="5,0">
                <Image Source="user.png"
                   HeightRequest="24"
                   WidthRequest="24"
                   VerticalOptions="Center"/>
                <Entry Placeholder="Correo electrónico"
                   x:Name="txtEmail"
                   Keyboard="Email"
                   MaxLength="50"
                   TextColor="Black"
                   FontSize="13"
                   ClearButtonVisibility="WhileEditing"
                   BackgroundColor="Transparent"/>
            </HorizontalStackLayout>
        </Border>

        <Border Stroke="#72C9F4"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1"
                Margin="0,10,0,0">
            <HorizontalStackLayout VerticalOptions="Center" Spacing="8" Padding="5,0">
                <Image Source="lock.png"
           HeightRequest="24"
           WidthRequest="24"
           VerticalOptions="Center"/>
                <Entry Placeholder="Contraseña"
                   x:Name="txtPassword"
           Margin="20,0"
       Keyboard="Password"
       MaxLength="50"
       TextColor="Black"
       FontSize="13"
       IsPassword="True"
       ClearButtonVisibility="WhileEditing"
       BackgroundColor="Transparent"
 
           />
            </HorizontalStackLayout>

        </Border>

        <Button 
                Text="Comenzar"
                BackgroundColor="#0595EC"
                TextColor="#ffffff"
                CornerRadius="10"
                HeightRequest="45"
                FontAttributes="Bold"
            Clicked="OnSendLogin"
                Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>