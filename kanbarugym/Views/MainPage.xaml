<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
                          x:Class="kanbarugym.Views.MainPage"
>

    <Grid>
        <!-- Imagen de fondo sin opacidad -->
        <Image Source="fondo.png"
               Aspect="AspectFill"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <!-- Contenido -->
        <Grid Padding="30">
            <StackLayout VerticalOptions="Start" Spacing="10" Margin="0,80,0,0">
                <!-- Título -->
                <Label Text="GIMX"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Start"/>

                <!-- Subtítulo -->
                <Label Text="Donde la disciplina
                       
                       se convierte en resultados"
                       FontSize="18"
                       TextColor="White"
                       HorizontalTextAlignment="Start"/>
            </StackLayout>

            <!-- Contenido inferior -->
            <StackLayout VerticalOptions="End" Spacing="15">
                <!-- Indicadores -->
                <Grid HorizontalOptions="Center" Margin="0,20,0,0">
                    <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4"
                             BackgroundColor="White" Opacity="0.7" Margin="3"/>
                    <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4"
                             BackgroundColor="White" Opacity="0.3" Margin="3"/>
                    <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4"
                             BackgroundColor="White" Opacity="0.3" Margin="3"/>
                </Grid>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
