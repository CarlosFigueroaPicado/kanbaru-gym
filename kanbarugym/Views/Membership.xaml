<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kanbarugym.Views.Membership"
             Title="Membresias">

    <Shell.TitleView>
        <Grid>
            <VerticalStackLayout Margin="0,10,15,0">
                <Label Text="MembresÃ­as"
                   FontSize="22"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontAttributes="Bold" 
                   TextColor="Black"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"/>
                <Border StrokeThickness="0"
                    BackgroundColor="#0595EC"
                    StrokeShape="RoundRectangle 100,100"
                    HeightRequest="5"
                    WidthRequest="130"
                    HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="20,10">

        <Grid HeightRequest="45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="3"
                    Stroke="#72C9F4"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Padding="0">
                <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.1"
                        Offset="0,0"
                        Radius="5"/>
                </Border.Shadow>

            </Border>

            <Image Source="filter.png"
                   Grid.Column="0"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   WidthRequest="20"
                   HeightRequest="20"/>

            <Entry x:Name="searchEntry"
                   Grid.Column="1"
                   Placeholder="Buscar..."
                   BackgroundColor="Transparent"
                   VerticalOptions="Center"
                   Margin="0"
                   TextColor="Black"/>

            <Button Grid.Column="2"
                    ImageSource="search.png"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="Transparent"
        />
        </Grid>

    </VerticalStackLayout>

</ContentPage>